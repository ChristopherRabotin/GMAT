#!/bin/bash
# Set up the environment for GMAT first
# This assumes that the user has set the MATLABFORGMAT environment variable in her/his environment.plist file.  
# MATLABFORGMAT should point to the directory where MATLAB has been installed, i.e. /Applications/MATLAB_R2007b
# Intel ...
if [[ `arch` = "i386" ]]; then
export DYLD_LIBRARY_PATH=$MATLABFORGMAT/bin/maci:/$MATLABFORGMAT/sys/os/maci:$DYLD_LIBRARY_PATH
else   # PowerPC ...
export DYLD_LIBRARY_PATH=$MATLABFORGMAT/bin/mac:/$MATLABFORGMAT/sys/os/mac:$DYLD_LIBRARY_PATH
fi
export PATH=$MATLABFORGMAT/bin:$PATH
here="${0%/*}"
cmd='GMAT'

exec "$here/$cmd" "$@"
# Linux makefile for a single GMAT base library for the Linux GUI
# Initial Version - D. Conway - 2005/06/17

WXTARGET = gmat

WXSTATICTARGET = gmatStatic

TARGETS = $(WXTARGET)

LIBS = ../base/lib/libGmatGui.a

MATLAB_LIBRARIES = -leng -lmx -lut -lmat -lpthread \
                   -lgcc_s -licudata -licui18n \
                   -licuuc -lustdio -lz

LINK_FLAGS = `wx-config --libs --static=no` -lwx_gtk2_gl-2.6 -lg2c
#             -L/usr/local/matlab704/bin/glnx86 \
#             -lIL -lILU -lILUT 
 
STATIC_LINK_FLAGS = `wx-config --libs --static=yes` -lwx_gtk2_gl-2.6 -lg2c
#             -L/usr/local/matlab704/bin/glnx86 \
#             -lIL -lILU -lILUT 
 
all: prep $(TARGETS)

gui: $(WXTARGET)

static : $(WXSTATICTARGET)

prep:
	mkdir -p ../bin

CPP = g++

OPTIMIZATIONS = -O2

HEADERS = -I../base/include \
          -I../base/foundation \

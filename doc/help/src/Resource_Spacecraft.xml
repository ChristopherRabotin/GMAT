                  <term>Type</term>

                  <listitem>
                    <para>real number</para>
                  </listitem>
                </varlistentry>

                <varlistentry>
                  <term>Default</term>

                  <listitem>
                    <para>0</para>
                  </listitem>
                </varlistentry>

                <varlistentry>
                  <term>Limits</term>


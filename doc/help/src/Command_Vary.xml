  <indexterm>
    <primary>Vary</primary>
  </indexterm>

  <refmeta>
    <refentrytitle>Vary</refentrytitle>

    <refmiscinfo class="source">GMAT</refmiscinfo>

    <refmiscinfo class="version">R2012a</refmiscinfo>

    <refmiscinfo class="manual">Commands</refmiscinfo>

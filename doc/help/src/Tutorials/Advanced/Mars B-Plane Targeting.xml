      </itemizedlist>
    </section>

    <section>
      <title>Mission Description</title>

      <itemizedlist>
        <listitem>
          <para>Objective: Target a Martian transfer trajectory using B-Plane
          Targeting, to achieve a final inclination of 24.677°.</para>
        </listitem>

        <listitem>
          <para>Assume:</para>

          <itemizedlist>
            <listitem>
              <para>Parking orbit SMA = 10000 km</para>
            </listitem>

            <listitem>
              <para>Parking orbit ECC = 0.1</para>
            </listitem>

            <listitem>
              <para>INC = 25.0°</para>
            </listitem>

            <listitem>
              <para>RAAN = 332.5°</para>
            </listitem>

            <listitem>
              <para>AOP = 90.0°</para>
            </listitem>

            <listitem>
              <para>TA = 360°</para>
            </listitem>
          </itemizedlist>
        </listitem>

        <listitem>
          <para>Find:</para>

          <itemizedlist>
            <listitem>
              <para>INC</para>
            </listitem>

            <listitem>
              <para>BdotT</para>
            </listitem>

            <listitem>
              <para>BdotR</para>
            </listitem>
          </itemizedlist>
        </listitem>
      </itemizedlist>
    </section>

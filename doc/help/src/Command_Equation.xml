  <indexterm>
    <primary>Equation</primary>
  </indexterm>

  <refmeta>
    <refentrytitle>Equation</refentrytitle>

    <refmiscinfo class="source">GMAT</refmiscinfo>



    <refmiscinfo class="manual">Commands</refmiscinfo>
